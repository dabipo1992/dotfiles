[colors]
	accent = #fe7a61
	bckgrd = #121212
	select = #222222


	background = 			${self.bckgrd}
	background-alt = 		${self.select}
	foreground = 			#A5ffffff
	;primary = 			${xrdb:accent}
	primary = 			${self.accent}
	alert = 			#bd2c40
	transparent = 			#00000000



[global/wm]
	margin-top = 5
	margin-bottom = 0



[settings]
	throttle-output = 5
	throttle-output-for = 10
	throttle-input-for = 30
	screenchange-reload = true
	bargapp= 0
	barwidth = 100%
	barheigh = 48



[bar/top]
	monitor = ${env:MONITOR}
	monitor-strict = true
	fixed-center = true
	dpi = 96
	bottom = false
	width = ${settings.barwidth}
	height = ${settings.barheigh}
	offset-x = 0
	offset-y = 0
	background = ${colors.background}
	foreground = ${colors.foreground}
	overline-size = 0
	overline-color = #f00
	underline-size = 2
	underline-color = #00f
	border-top-size = ${settings.bargapp}
	border-left-size = ${settings.bargapp}
	border-right-size = ${settings.bargapp}
	border-bottom-size = 0
	border-color = ${colors.transparent}
	radius-top = 0
	radius-bottom = 0
	spacing = 2
	padding-left = 3
	padding-right = 0
	module-margin-left = 1
	module-margin-right = 1
	font-0 = Monaco:size=12;2
	font-1 = FontAwesome:pixelsize=12;3
	font-2 = Font Awesome 5 Free:pixelsize=12;3
	font-3 = Font Awesome 5 Free Solid:pixelsize=12;3
	font-4 = Font Awesome 5 Brands:pixelsize=12;3
	font-5 = Monaco:size=12;3
	tray-position = right
	tray-padding = 4

	modules-left = backlight volume
	modules-right = wlan cpu memory battery date



[bar/center]
	monitor = ${env:MONITOR}
	monitor-strict = true
	fixed-center = true
	dpi = 96
	bottom = false
	width = 1500
	height = ${settings.barheigh}
	override-redirect = true
	offset-x = 1170
