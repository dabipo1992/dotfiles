exec_always xmodmap ~/.Xmodmap
exec_always "setxkbmap -layout latam -option caps:swapescape"

set $mod mod4
set $alt mod1
set $esc Escape
set $ctl Control
set $ctr mod3
set $alg mod5

#exec xset -r 73 #F7
